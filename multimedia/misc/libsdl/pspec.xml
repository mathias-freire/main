            <Dependency>alsa-lib-devel</Dependency>
            <Dependency>aalib-devel</Dependency>
            <Dependency>libX11-devel</Dependency>
            <Dependency>libusb-compat-devel</Dependency>
            <Dependency>libXtst-devel</Dependency>
            <Dependency>libICE-devel</Dependency>
            <Dependency>libXrandr-devel</Dependency>
            <Dependency>mesa-devel</Dependency>
            <Dependency>mesa-glu-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">SDL-1.2.10-GrabNotViewable.patch</Patch>
            <Patch level="1">SDL-1.2.15-SDL_EnableUNICODE_drops_keyboard_events.patch</Patch>
			<Patch level="1">SDL-1.2.15-const_XData32.patch</Patch>
			<Patch level="1">SDL-1.2.15-ignore_insane_joystick_axis.patch</Patch>
			<Patch level="1">SDL-1.2.15-no-default-backing-store.patch</Patch>
