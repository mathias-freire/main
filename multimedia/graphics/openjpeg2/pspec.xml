            <Dependency>cmake</Dependency>
            <Dependency>lcms2-devel</Dependency>
            <Dependency>tiff-devel</Dependency>
            <Dependency>doxygen</Dependency>
            <Dependency>libpng-devel</Dependency>
        </BuildDependencies>
    </Source>

