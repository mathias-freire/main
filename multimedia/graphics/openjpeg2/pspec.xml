    <Package>
        <Name>openjpeg2-32bit</Name>
        <PartOf>emul32</PartOf>
        <Summary>32-bit shared libraries for openjpeg2</Summary>
        <BuildType>emul32</BuildType>
        <BuildDependencies>
            <Dependency>lcms2-32bit</Dependency>
